<h2>초간단 회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email주소 %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :비밀번호 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 글자 이상 입력해주세요)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :비밀번호확인 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>


<br>


  <!-- 추가입력내용 -->
  <div class="field">
    <%= f.label :성별 %><br />
    <%= f.text_field :sex, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :나이 %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :대학교 %><br />
    <%= f.text_field :univ, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :사는지역 %><br />
    <%= f.text_field :region, autofocus: true %>
  </div>
  <!-- END -->
<br>


  <div class="actions btn btn-default">
     <%= f.submit "가입하기" %>  
  </div>
<% end %>

