<h2>초간단 회원가입</h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="row field">
        <%= f.email_field :email, autofocus: true, :placeholder => "e-mail을 입력해주세요", class: "col-lg-12 form-control" %>
      
  </div>  

<br>

  <div class="row field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호(8자리이상)를 입력해주세요", class: "col-lg-12 form-control" %>
  </div>

<br>

  <div class="row field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "비밀번호를 확인합니다", class: "col-lg-12 form-control" %>
  </div>


<br>
<br>
     
     
<div id="radio">
  <div class="row field">
    
      <%= f.radio_button :sex, "남자", :id=>"radio1", checked:true %>
      <label for="radio1" class="col-lg-6">남자</label>
      
      <%= f.radio_button :sex, "여자", :id=>"radio2" %>
      <label for="radio2" class="col-lg-6">여자</label>
           
  </div>
</div>

<br>
  

  <div class="row field">
    <%= f.text_field :age, autofocus: true, :placeholder => "나이는 몇살인가요?(숫자만)", class: "col-lg-12 form-control" %>
  </div>
  
<br>

  <div class="row field">

    <%= f.select :univ, options_for_select([['대학교선택','대학교선택'],['성신여자대학교','성신여자대학교'],['인하대학교','인하대학교']], params[:univ])%>

  </div>
    
  <br>
  
  <div class="row field">
    <%= f.text_field :region, autofocus: true, :placeholder => "사는 지역은 어디신가요?", class: "col-lg-12 form-control" %>
  </div>
  <!-- END -->
<br>


  <div class="actions">
     <%= f.submit "가입하기",class:"btn btn-lg btn-success btn-block btn-submit" %>  
  </div>
<% end %>
</div>


