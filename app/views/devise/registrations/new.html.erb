<h2>초간단 회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :email주소 %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :비밀번호 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 글자 이상 입력해주세요)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :비밀번호확인 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>


<br>

       

     
<div id="radio">
  <div class="field">
    <%= f.label :성별 %> <br />
      
      <%= f.radio_button :sex, "남자", :id=>"radio1", checked:true %>
      <label for="radio1">남자</label>
      
      <%= f.radio_button :sex, "여자", :id=>"radio2" %>
      <label for="radio2">여자</label>
           
  </div>
</div>
  

  <div class="field">
    <%= f.label :나이 %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>
  

  <div class="field">
    <%= f.label :대학교 %> <br />
    <%= f.select :univ, 
    options_for_select([['대학교선택','대학교선택'],['성신여대','성신여대'],['인하대','인하대']], params[:univ])%>
  <div>
    
  <br>
  
  <div class="field">
    <%= f.label :사는지역 %><br />
    <%= f.text_field :region, autofocus: true %>
  </div>
  <!-- END -->
<br>


  <div class="actions btn btn-default">
     <%= f.submit "가입하기" %>  
  </div>
<% end %>



